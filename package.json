    "eslint-plugin-jest": "^24.3.6",
    "git-commit-msg-linter": "^3.2.6",
    "husky": "^6.0.0",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.0",
    "serverless": "^2.47.0",
    "serverless-offline": "^7.0.0"
  }
