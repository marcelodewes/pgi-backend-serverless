{
  "name": "pgi-serverless",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "debug": "export SLS_DEBUG=* && node --inspect ./node_modules/.bin/serverless offline -s dev --httpPort=3001",
    "deploy": "serverless deploy --verbose",
    "lint:staged": "lint-staged",
